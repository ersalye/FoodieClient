<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation.xml"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.fpondarts.foodie.ui.auth2.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.fpondarts.foodie.ui.auth2.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_registerDataFragment"
            app:destination="@id/registerDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerDataFragment"
        android:name="com.fpondarts.foodie.ui.auth2.RegisterDataFragment"
        android:label="RegisterDataFragment" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="photo"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="uid"
            app:argType="string" />
        <action
            android:id="@+id/action_registerDataFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>