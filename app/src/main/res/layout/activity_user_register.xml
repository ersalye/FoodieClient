<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp"
        android:background="@color/colorPrimaryLight">


        <TextView
            android:id="@+id/AppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/pickRegisterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/pickRegisterOption"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="24dp" />


        <Button
            android:id="@+id/signUpButton"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/manualSignUp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSignInButton"
            android:layout_width="256dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/alreadySignedUpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alreadySignedUp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/toSignInButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/signIn" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>