<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="123dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="Item name"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_item_unit_price"
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:hint="$xx.xx / unidad"
            app:layout_constraintStart_toEndOf="@+id/order_item_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_item_units"
            android:layout_width="88dp"
            android:layout_height="25dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:hint="x Unidades"
            app:layout_constraintStart_toEndOf="@id/order_item_unit_price"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>