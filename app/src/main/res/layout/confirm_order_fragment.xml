<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.fpondarts.foodie.ui.home.ui.home.confirm_order.ConfirmOrderViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ui.home.confirm_order.ConfirmOrderFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/priceCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/price_no_delivery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Precio de compra"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/delivery_options_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Costo de envÃ­o"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_no_delivery" />

            <RadioGroup
                android:layout_width="183dp"
                android:layout_height="63dp"
                android:id="@+id/delivery_radiogroup"
                android:checkedButton="@{viewModel.checkedButton}"
                app:layout_constraintStart_toEndOf="@+id/delivery_options_title"
                app:layout_constraintTop_toTopOf="@id/delivery_options_title">

                <RadioButton
                    android:id="@+id/rb_money_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusedByDefault="true"
                    android:onClick="@{viewModel::onRadioButtonClicked}"
                    android:text="@{viewModel.priceStr}" />

                <RadioButton
                    android:id="@+id/rb_favor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntos de favor"
                    android:onClick="@{viewModel::onRadioButtonClicked}"/>
            </RadioGroup>

            <EditText
                android:layout_width="181dp"
                android:layout_height="39dp"
                android:text="@{viewModel.pointsStr}"
                android:id="@+id/et_points"
                android:inputType="number"
                android:accessibilityPaneTitle="Puntos a ofrecer"
                app:layout_constraintStart_toStartOf="@id/delivery_radiogroup"
                app:layout_constraintTop_toBottomOf="@id/delivery_radiogroup"
                android:hint="Puntos a ofrecer"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="Cancelar"
        android:onClick="@{viewModel::onCancel}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceCard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="32dp"
        android:text="Confirmar"
        android:onClick="@{viewModel::onConfirmOrder}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>